{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cmake",
			"command": "cmake",
			"args": [
				"../",
				"-G'Unix Makefiles'"
			],
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			}
		},
		{
			"label": "make",
			"command": "make",
			"args": [],
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			}
		},
		{
			"label": "make install",
			"command": "make",
			"args": ["install"],
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			}
		}
	]
}